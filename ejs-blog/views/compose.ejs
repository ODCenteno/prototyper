<%- include('./partials/header') -%>

<h1> Compose </h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="new-post__title" class="h4">Title</label><br>
    <input type="text" id="new-post__title" name="newPostTitle" placeholder="Post title" class="post-title__input form-control"><br>
  </div>
  <div class="form-group">
    <label for="new-post__content" class="h4">Post</label><br>
    <textarea rows="3" cols="50" type="text/field" id="new-post__content" name="newPostContent" placeholder="Enter post content" class="post-content__input form-control"></textarea><br>
  </div>
  <button type="submit" name="button" value="" class="btn btn-primary">Publish</button>
</form>


<%- include('./partials/footer') -%>
